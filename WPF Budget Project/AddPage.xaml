<Page x:Class="WPF_Budget_Project.AddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Budget_Project"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      FontFamily="Comic Sans MS"
      FontSize="16"
      Foreground="White"
      Title="AddPage">

    <Grid HorizontalAlignment="Center" Width="600">
        <Rectangle RadiusX="40" RadiusY="40" Margin="35" Width="500" Height="680" Opacity="0.7" Fill="#a5d6a7"/>
        <StackPanel>
        <TextBlock Text="Category" Margin="0 100 0 0" HorizontalAlignment="Center"/>
        <ComboBox MaxWidth="300">
            <ComboBoxItem>Income</ComboBoxItem>
            <ComboBoxItem>Spend</ComboBoxItem>
        </ComboBox>
        <TextBox x:Name="Category_Insert" MaxWidth="200" Margin="0 3 0 0"/>
        </StackPanel>
    </Grid>
</Page>
