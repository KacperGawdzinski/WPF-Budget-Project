<Window x:Class="Clerk.LoginWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Clerk"
      mc:Ignorable="d" 
      Height="400" Width="400"
      Title="Login"
      WindowStartupLocation="CenterScreen"
      FontFamily="Moon"
      FontWeight="Bold"
      FontSize="16"
      ResizeMode="NoResize"
      Icon="/Images/icon.ico">

    <Window.Background>
        <ImageBrush ImageSource="/Images/LoginBackground.jpg" Stretch="Fill" />
    </Window.Background>
    <Frame x:Name="Main" NavigationUIVisibility="Hidden" Navigating="Frame_Navigating"/>
</Window>
